{
    "name": "migratetoflarum/recalculate-meta",
    "description": "Re-calculate the meta information of discussions and users",
    "keywords": [
        "extension",
        "flarum",
        "migration",
        "meta"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com/"
        }
    ],
    "support": {
        "source": "https://github.com/migratetoflarum/recalculate-meta"
    },
    "require": {
        "flarum/core": "^1.8"
    },
    "extra": {
        "flarum-extension": {
            "title": "Recalculate Meta",
            "category": "feature",
            "icon": {
                "name": "fas fa-calculator",
                "backgroundColor": "#e7672e",
                "color": "#fafafa"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "MigrateToFlarum\\RecalculateMeta\\": "src/"
        }
    }
}
